# Frontend .env.example
# Copie este arquivo para .env.local (localhost) ou use .env.production (EasyPanel)

# Supabase (mesmas chaves do backend)
NEXT_PUBLIC_SUPABASE_URL=https://sua-projeto-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=sua_anon_key_aqui

# API Backend
NEXT_PUBLIC_API_URL=http://localhost:8001  # localhost: http://localhost:8001, easypanel: https://seu-dominio-backend

# App Configuration (opcional)
NEXT_PUBLIC_APP_NAME="Shop Flow"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# Feature Flags (opcional)
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_CAMERA_VIEW=true
NEXT_PUBLIC_ENABLE_EXPORTS=true

# UI Configuration (opcional)
NEXT_PUBLIC_DEFAULT_THEME=nexus-dark
NEXT_PUBLIC_REFRESH_INTERVAL=2000

# Production only (EasyPanel)
# NODE_ENV=production
# NEXT_TELEMETRY_DISABLED=1