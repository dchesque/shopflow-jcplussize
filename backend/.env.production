# =============================================================================
# üöÄ API CONFIGURATION
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8001
API_DEBUG=false
API_SECRET_KEY=super-secret-api-key-change-in-production

# =============================================================================
# ü§ñ YOLO11 AI SETTINGS
# =============================================================================
YOLO_MODEL=yolo11n.pt
YOLO_CONFIDENCE=0.6
YOLO_IOU=0.45
ENABLE_GPU=auto

